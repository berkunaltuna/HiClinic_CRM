# Phase 4: environment + secrets management
# Copy this file to .env (NOT committed) and fill in real secrets.

APP_VERSION=0.0.1

# Database (docker compose db service)
POSTGRES_USER=crm
POSTGRES_PASSWORD=crm
POSTGRES_DB=crm

# SQLAlchemy URLs used by the API/worker/test containers
DATABASE_URL=postgresql+psycopg://crm:crm@db:5432/crm
DATABASE_TEST_URL=postgresql+psycopg://crm:crm@db:5432/crm_test

# Auth
JWT_SECRET_KEY=dev-change-me
ADMIN_EMAILS=admin@example.com

# Email sending
# EMAIL_PROVIDER can be: "fake" (no real email, for tests) or "smtp" (real sending)
EMAIL_PROVIDER=smtp

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=info@healthclinicturkiye.com
SMTP_PASSWORD=__SET_ME__
SMTP_FROM_EMAIL=info@healthclinicturkiye.com
SMTP_FROM_NAME=Health Clinic Turkiye
SMTP_USE_STARTTLS=true

# --- Phase 4A: Twilio WhatsApp (Sandbox or approved sender) ---
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_WHATSAPP_FROM=whatsapp:+14155238886

# Default country code used when normalising phone numbers without a leading +
DEFAULT_COUNTRY_CODE=+44

